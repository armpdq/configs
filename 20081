apt remove flussonic -y
rm -f /etc/apt/sources.list.d/flussonic.list;
echo "deb http://apt.flussonic.com binary/" > /etc/apt/sources.list.d/flussonic.list;
apt update;
apt install flussonic=20.08.1
wget http://la-1.castr.io:7777/streamer.key?key=some_secret_token -O /etc/flussonic/flussonic.key
wget http://la-1.castr.io:7777/streamer.crt?key=some_secret_token -O /etc/flussonic/flussonic.crt
wget http://la-1.castr.io:7777/flussonic.ca-bundle?key=some_secret_token -O /etc/flussonic/flussonic.ca-bundle
wget http://la-1.castr.io:7777/streamer-ca.crt?key=some_secret_token -O /etc/flussonic/flussonic-ca.crt
service flussonic restart
